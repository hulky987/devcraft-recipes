// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model UserLocal {
  id       Int      @id @default(autoincrement())
  name     String
  email    String
  password String
  recipes  Recipe[]
}

model UserGithub {
  id       Int    @id @default(autoincrement())
  name     String
  email    String
  password String
}

model Recipe {
  id          Int      @id @default(autoincrement())
  name        String
  description String?
  Steps       String[]
  cookingTime Int?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  userId      Int
  user        UserLocal    @relation(fields: [userId], references: [id])
  Ingredients Ingredient[]
}

model Ingredient {
  id     Int    @id @default(autoincrement())
  name   String
  unit   String
  amount Float

  recipeId Int
  recipe   Recipe @relation(fields: [recipeId], references: [id], onDelete: Cascade)
}
